<li class="row">
    <img {{bind-attr src="coverUrl"}} alt="Album cover" class="col-xs-2 cover img-responsive img-thumbnail"/>

    <div class="col-xs-10">
        <h4>{{title}}</h4>
        <dl class="album-desc dl-horizontal">
            <dt>volume</dt><dd>{{number}}</dd>
            <dt>date</dt><dd>{{format-date "MMMM YYYY" publicationDate}}</dd>
        </dl>
    </div>
</li>