<div class="col-xs-12 col-md-4 series-details">
    <h3>{{title}}</h3>
    <img {{bind-attr src="coverUrl"}} alt="Series's first album cover" class="cover img-responsive img-thumbnail"/>
    <dl class="series-desc dl-horizontal">
        <dt>Scriptwriter</dt>
        <dd>{{scriptwriter}} </dd>
        <dt>Illustrator</dt>
        <dd>{{illustrator}}</dd>
        <dt>Publisher</dt>
        <dd>{{publisher}}</dd>
        <dt>Publication Date</dt>
        <dd>{{format-date "MMMM YYYY" publicationDate}}</dd>
        <dt>Volumes</dt>
        <dd>{{volumes}}</dd>
    </dl>
</div>