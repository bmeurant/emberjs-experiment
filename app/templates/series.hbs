<div class="col-xs-12 col-md-3">
    <h2>Comics series</h2>

    <ul class="series-listing">
        {{#each series in controller}}
            <li class="series-item">
                {{#link-to 'seriesItem' series title=series.title}}
                    {{series.title}}
                {{/link-to}}
            </li>
        {{/each}}
        <li class="series-item">{{#link-to 'series.create' title="add series" class="add"}}<i class="fa fa-2x fa-plus-square"></i>{{/link-to}}</li>
    </ul>

    <span>Number of series: {{seriesCount}}</span>
</div>

{{outlet}}